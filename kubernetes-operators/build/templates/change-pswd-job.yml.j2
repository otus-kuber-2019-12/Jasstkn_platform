apiVersion: batch/v1
kind: Job
metadata:
  namespace: default
  name: change-pswd-{{ name }}-job
spec:
  template:
    metadata:
      name: change-pswd-{{ name }}-job
    spec:
      restartPolicy: OnFailure
      containers:
      - name: chgpswd
        image: mysql:5.7
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "mysql -u root -h {{ name }} -p{{ old_password }} {{ database }} <<< 'FLUSH PRIVILEGES; ALTER USER 'root'@'localhost' IDENTIFIED BY '{{ new_password }}'; '"
        volumeMounts:
        - name: backup-{{ name }}-pv
          mountPath: /backup-{{ name }}-pv
      volumes:
      - name: backup-{{ name }}-pv
        persistentVolumeClaim:
          claimName: backup-{{ name }}-pvc